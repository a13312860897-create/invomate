{
  "name": "invoice-management-system",
  "version": "1.0.0",
  "description": "A comprehensive invoice management system",
  "main": "backend/server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && node server.js",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "cd backend && nodemon server.js",
    "build": "cd frontend && npm run build",
    "test": "cd backend && npm test",
    "test:watch": "cd backend && npm run test:watch",
    "test:coverage": "cd backend && npm run test -- --coverage",
    "migrate": "node backend/src/scripts/dataMigration.js",
    "validate-data": "node -e \"const InvoiceValidator = require('./backend/src/utils/invoiceValidator'); console.log('数据验证工具已加载');\"",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "invoice",
    "management",
    "billing",
    "accounting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "node-fetch": "^3.3.2"
  }
}
