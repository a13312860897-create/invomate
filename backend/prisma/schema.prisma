generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Settings {
  id          Int      @id @default(autoincrement())
  invoiceMode String   @default("intl")
  modeConfig  Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InvoicePaymentToken {
  id               Int      @id @default(autoincrement())
  invoiceId        String   // 发票ID
  paymentToken     String   @unique // 安全支付令牌
  paddlePaymentId  String?  // Paddle支付链接ID
  expiresAt        DateTime // 过期时间
  isUsed           Boolean  @default(false) // 是否已使用
  usedAt           DateTime? // 使用时间
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([invoiceId])
  @@index([paymentToken])
  @@index([expiresAt])
}
